<Window x:Class="TextRPG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Fallout: Текстовый Квест" Height="550" Width="750"
        Background="#1E1E1E" Foreground="White">

    <Grid>
        <!-- Фон -->
        <Image Name="BackgroundImage" Stretch="Fill" Panel.ZIndex="-1"/>

        <!-- Панель статусов -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <TextBlock Text="💰 Крышки: " FontSize="16"/>
            <TextBlock Name="txtMoney" Text="50" FontSize="16" FontWeight="Bold"/>
            <TextBlock Text="   ❤️ Здоровье: " FontSize="16"/>
            <TextBlock Name="txtHealth" Text="100" FontSize="16" FontWeight="Bold"/>
        </StackPanel>

        <!-- Основной контейнер -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="600">
            <Border Background="#252526" Padding="20" CornerRadius="10">
                <TextBlock Name="txtStory" TextWrapping="Wrap" FontSize="18"
                           TextAlignment="Center" Foreground="White"/>
            </Border>
            <StackPanel Name="choicesPanel" Margin="20,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>

