<Window x:Class="TextRPG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Fallout: Текстовый Квест" Height="500" Width="700"
        Background="#1E1E1E" Foreground="White">

    <Grid>
        <!-- Фоновое изображение -->
        <Image Name="BackgroundImage" Stretch="Fill" Panel.ZIndex="-1"/>

        <!-- Основной контейнер -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="600">

            <!-- Блок текста -->
            <Border Background="#252526" Padding="20" CornerRadius="10">
                <TextBlock Name="txtStory" TextWrapping="Wrap" FontSize="18"
                           TextAlignment="Center" Foreground="White"/>
            </Border>

            <!-- Блок кнопок -->
            <StackPanel Name="choicesPanel" Margin="20,20,0,0"/>

        </StackPanel>
    </Grid>
</Window>
