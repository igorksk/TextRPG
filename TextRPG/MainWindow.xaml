<Window x:Class="TextRPG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Текстовый Квест" Height="550" Width="750"
        Background="#121212" Foreground="White"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Фоновое изображение -->
        <Image Name="BackgroundImage" Stretch="Fill" Panel.ZIndex="-1"/>

        <!-- Панель статусов (деньги и здоровье) -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <TextBlock Text="💰 " FontSize="16" Foreground="#FFD700"/>
            <TextBlock Name="txtMoney" Text="50" FontSize="16" FontWeight="Bold" Foreground="#FFD700"/>
            <TextBlock Text="   ❤️ " FontSize="16" Foreground="#50C878"/>
            <TextBlock Name="txtHealth" Text="100" FontSize="16" FontWeight="Bold" Foreground="#50C878"/>
        </StackPanel>

        <!-- Название текущей локации -->
        <TextBlock Name="txtLocationName" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="#FFD700" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Margin="0,50,0,0"/>

        <!-- Контейнер для текста и кнопок внизу экрана -->
        <StackPanel VerticalAlignment="Bottom" Background="#1E1E1ECC" Margin="10" 
                    Width="700" HorizontalAlignment="Center">

            <!-- Описание локации -->
            <Border Background="Transparent" Padding="10">
                <TextBlock Name="txtLocationDescription" TextWrapping="Wrap" FontSize="18"
                           Foreground="#90EE90" TextAlignment="Center"/>
            </Border>

            <!-- Текст сцены -->
            <Border Background="Transparent" Padding="10">
                <TextBlock Name="txtStory" TextWrapping="Wrap" FontSize="18"
                           Foreground="#90EE90" TextAlignment="Center"/>
            </Border>

            <!-- Контейнер кнопок выбора -->
            <StackPanel Name="choicesPanel" Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                <!-- Кнопки будут добавляться динамически -->
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>